<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/navigation_shape"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:layout_weight="1"
            android:src="@drawable/home"/>

        <ImageView
            android:id="@+id/notesBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:layout_weight="1"
            android:src="@drawable/notes"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/roadSignsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:layout_margin="5dp"
            android:src="@drawable/road_sign"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/mtbBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/mtb"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/questionsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:src="@drawable/questions"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:contentDescription="questionsBtn" />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>